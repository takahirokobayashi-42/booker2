<div class="container">
  <div class="row">
    <div class="col-md-4">
      <table class="user_information">
        <%= render 'users/information' %>
      </table>
      <table class="new_create">
        <%= render 'books/new' %>
      </table>
    </div>
  <div class="col-md-8">
    <h1>Book detail</h1>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <% @books.each do |post_book| %>
      <% if @user == post_book.user %>
        <tr>
          <td style="width:100px"><%= link_to edit_user_path(post_book.user.id) do %>
            <%= attachment_image_tag post_book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", :size => '40x40' %>
            <% end %>
          </td>
          <td style="width:150px">
            <%= link_to book_path(post_book.id) do %>
            <%= post_book.title %>
            <% end %>
          </td>
          <td style="width:200px">
            <%= post_book.body %>
          </td>

        </tr>

       <% end %>
      <% end %>
     </table>
   </div>
   </div>
 </div>